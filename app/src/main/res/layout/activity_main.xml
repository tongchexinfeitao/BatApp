<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/quxiao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="@dimen/dp_36"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_20"
        android:text="取消"
        android:textSize="@dimen/sp_14" />

    <android.support.v7.widget.CardView
        android:layout_width="@dimen/dp_312"
        android:layout_height="@dimen/dp_190"
        android:layout_gravity="center_horizontal"
        app:cardCornerRadius="@dimen/dp_12"
        app:cardElevation="@dimen/dp_3">

        <EditText
            android:id="@+id/edid_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:gravity="top"
            android:hint="请在此写下您的问题"
            android:paddingLeft="@dimen/dp_10"
            android:paddingTop="@dimen/dp_10"
            android:textSize="@dimen/sp_14" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="@dimen/dp_312"
        android:layout_height="@dimen/dp_196"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_30"
        app:cardCornerRadius="@dimen/dp_12"
        app:cardElevation="@dimen/dp_3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/dp_20"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_24"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/dp_10"
                    android:src="@drawable/editquery_icon_market_n" />

                <LinearLayout
                    android:layout_width="@dimen/dp_220"
                    android:layout_height="@dimen/dp_46"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal">

                    <android.support.v7.widget.CardView
                        android:layout_width="@dimen/dp_220"
                        android:layout_height="@dimen/dp_44"
                        app:cardCornerRadius="@dimen/dp_5"
                        android:id="@+id/img_queryadd"
                        android:layout_gravity="center"
                        app:cardElevation="@dimen/dp_2"
                        app:cardUseCompatPadding="true">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/edit_address_main"
                                android:layout_width="@dimen/dp_190"
                                android:layout_marginLeft="@dimen/dp_5"
                                android:layout_height="match_parent"
                                android:background="@null"
                                android:gravity="center_vertical"
                                android:hint="请选择所属地区"
                                android:textSize="@dimen/sp_12" />

                            <ImageView
                                android:layout_width="@dimen/dp_18"
                                android:layout_height="@dimen/dp_18"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="@dimen/dp_10"
                                android:src="@drawable/editquery_icon_select_n_hdpi" />
                        </RelativeLayout>
                    </android.support.v7.widget.CardView>

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_24"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/dp_10"
                    android:src="@drawable/edit_query_icon_name_n_hdpi" />

                <LinearLayout
                    android:layout_width="@dimen/dp_220"
                    android:layout_height="@dimen/dp_46"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal">

                    <android.support.v7.widget.CardView
                        android:layout_width="@dimen/dp_220"
                        android:layout_height="@dimen/dp_44"
                        app:cardCornerRadius="@dimen/dp_5"
                        app:cardElevation="@dimen/dp_2"
                        android:layout_gravity="center"
                        app:cardUseCompatPadding="true">

                        <EditText
                            android:id="@+id/edit_name_main"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@null"
                            android:layout_marginLeft="@dimen/dp_5"
                            android:hint="请输入您的姓名"
                            android:textSize="@dimen/sp_12" />
                    </android.support.v7.widget.CardView>

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="@dimen/dp_10"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_24"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/dp_10"
                    android:src="@drawable/editquery_icon_phone_n_hdpi" />

                <LinearLayout
                    android:layout_width="@dimen/dp_220"
                    android:layout_height="@dimen/dp_46"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal">

                    <android.support.v7.widget.CardView
                        android:layout_gravity="center"
                        android:layout_width="@dimen/dp_220"
                        android:layout_height="@dimen/dp_44"
                        app:cardCornerRadius="@dimen/dp_5"
                        app:cardElevation="@dimen/dp_2"
                        app:cardUseCompatPadding="true">

                        <EditText
                            android:id="@+id/edit_phone_main"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@null"
                            android:layout_marginLeft="@dimen/dp_5"
                            android:hint="请输入您的手机号"
                            android:textSize="@dimen/sp_12" />
                    </android.support.v7.widget.CardView>

                </LinearLayout>


            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="@dimen/dp_312"
        android:layout_height="@dimen/dp_40"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_63"
        app:cardCornerRadius="@dimen/dp_12">

        <Button
            android:id="@+id/submite"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/btn_back_main"
            android:text="提交"
            android:textColor="#ffffff"
            android:textSize="@dimen/sp_18" />
    </android.support.v7.widget.CardView>

</LinearLayout>